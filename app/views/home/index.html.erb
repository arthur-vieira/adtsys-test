<% brands = Brand.all %>

<%= form_tag "/models", method: :get do -%>
  <p>
    <%= label_tag 'webmotors_brand_id', 'Escolha a Fabricante:' %>
    <%= select_tag "webmotors_brand_id", options_from_collection_for_select(brands, "webmotors_brand_id", "name") %>
  </p>

  <%= submit_tag "Buscar modelos" %>
<% end %>

